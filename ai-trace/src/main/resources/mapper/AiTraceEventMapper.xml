<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.halliday.ai.trace.persistence.mapper.AiTraceEventMapper">

    <resultMap id="AiTraceEventResultMap" type="com.halliday.ai.trace.persistence.entity.AiTraceEventEntity">
        <id column="id" property="id" />
        <result column="trace_id" property="traceId" />
        <result column="user_id" property="userId" />
        <result column="round_index" property="roundIndex" />
        <result column="phase" property="phase" />
        <result column="event_name" property="eventName" />
        <result column="message" property="message" />
        <result column="metadata" property="metadata" />
        <result column="timestamp" property="timestamp" />
        <result column="duration_ms" property="durationMs" />
        <result column="remark" property="remark" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="selectByTraceId" parameterType="string" resultMap="AiTraceEventResultMap">
        SELECT *
        FROM ai_trace_event
        WHERE trace_id = #{traceId}
        ORDER BY timestamp ASC, id ASC
    </select>

    <select id="selectByTraceIdAndRound" resultMap="AiTraceEventResultMap">
        SELECT *
        FROM ai_trace_event
        WHERE trace_id = #{traceId}
          AND round_index = #{roundIndex}
        ORDER BY timestamp ASC, id ASC
    </select>

</mapper>
