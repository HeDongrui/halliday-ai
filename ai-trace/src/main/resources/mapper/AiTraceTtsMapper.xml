<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.halliday.ai.trace.persistence.mapper.AiTraceTtsMapper">

    <resultMap id="AiTraceTtsResultMap" type="com.halliday.ai.trace.persistence.entity.AiTraceTtsEntity">
        <id column="id" property="id" />
        <result column="trace_id" property="traceId" />
        <result column="user_id" property="userId" />
        <result column="round_index" property="roundIndex" />
        <result column="segment_index" property="segmentIndex" />
        <result column="input_text" property="inputText" />
        <result column="voice_name" property="voiceName" />
        <result column="engine_name" property="engineName" />
        <result column="sample_rate" property="sampleRate" />
        <result column="format" property="format" />
        <result column="output_audio_url" property="outputAudioUrl" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="duration_ms" property="durationMs" />
        <result column="request_params" property="requestParams" />
        <result column="response_json" property="responseJson" />
        <result column="remark" property="remark" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <delete id="deleteByTraceIdAndRound">
        DELETE
        FROM ai_trace_tts
        WHERE trace_id = #{traceId}
          AND round_index = #{roundIndex}
    </delete>

    <select id="selectByTraceIdAndRound" resultMap="AiTraceTtsResultMap">
        SELECT *
        FROM ai_trace_tts
        WHERE trace_id = #{traceId}
          AND round_index = #{roundIndex}
        ORDER BY segment_index ASC
    </select>

</mapper>
